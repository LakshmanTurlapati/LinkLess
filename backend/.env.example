# LinkLess Backend Configuration
# Copy this file to .env and fill in your values

# App
DEBUG=false
SECRET_KEY=your-secret-key-change-me-in-production

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./linkless.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/linkless

# AI Provider: openai | anthropic | google | xai
AI_PROVIDER=openai

# OpenAI — used for Whisper transcription and GPT summarization
OPENAI_API_KEY=sk-...

# Anthropic — used for Claude summarization
ANTHROPIC_API_KEY=sk-ant-...

# Google — used for Gemini transcription and summarization
GOOGLE_API_KEY=AIza...

# xAI — used for Grok summarization
XAI_API_KEY=xai-...

# Storage
UPLOAD_DIR=./uploads
MAX_AUDIO_FILE_SIZE_MB=50
